{
  "manifest_version": 3,
  "name": "Magic Touch",
  "version": "4.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_title": "Magic Touch",
    "default_popup": ""
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["ui/panel/panel.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/panel/*", 
        "ui/popup/*", 
        "scrapers/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icons/sexy-16.png",
    "32": "assets/icons/sexy-32.png",
    "128": "assets/icons/sexy-128.png"
  }
}
